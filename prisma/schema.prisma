
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum MovementType{
  IN
  OUT
  }

  

// --- MODELO USER ---
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  products   Product[]
  categories Category[] 
  suppliers  Supplier[] 
  movements InventoryMovement[]
}

// --- MODELO PRODUCT  ---
model Product {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  price       Float
  sku         String    @unique
  quantity    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Clave foránea del Usuario
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  supplierId String?
  supplier   Supplier? @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  
  // Realciones
 movements InventoryMovement[]

  // Índices
  @@index([sku])
  @@index([authorId])
  @@index([categoryId]) 
  @@index([supplierId]) 
}

model Category {
  id   String @id @default(cuid())
  name String

  // Relación con el Usuario (para que cada usuario tenga sus categorías)
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Relación con Productos
  products Product[]

  // Índices
  @@index([authorId])
  // Índice único COMPUESTO: El 'name' debe ser único POR 'authorId'
  // (Dos usuarios pueden tener una categoría "Electrónica",
  // pero un usuario no puede tener dos "Electrónica")
  @@unique([authorId, name])
}

// --- MODELO SUPPLIER ---
model Supplier {
  id          String  @id @default(cuid())
  name        String
  contactName String?
  phone       String?
  email       String?

  // Relación con el Usuario
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Relación con Productos
  products Product[]

  // Índices
  @@index([authorId])
}

// ---  MODELO INVENTORY MOVEMENT ---
model InventoryMovement {
  id String @id @default(cuid())
  type MovementType
  quantity Int
  notes String? @db.Text
  createdAt DateTime @default(now())

  // Relación con el Producto
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)


  // Relación con el Usuario
  authorId String
  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  //Indices
  @@index([productId])
  @@index([authorId])
}

